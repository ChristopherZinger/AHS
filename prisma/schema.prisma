generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432"
}

model Profile {
  id                  String        @id @default(uuid())
  email               String        @unique
  firebase_id         String        @unique 
  name                String?
}

model Office {
  id               String        @id @default(uuid())
  full_name        String   
  short_name       String?
  lookup_keywords  String[]
  location         Location     @relation(fields: [locationId], references: [id])
  locationId       String
}

model Location {
  id              String        @id   @default(uuid())
  country_code    String
  country         String
  region          String
  city            String
  latitude        Float
  longitude       Float
  hash            String          // hash(country-city) // hash doesn't need to be unique 
  offices         Office[]
}

